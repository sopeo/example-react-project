{
  "name": "react-project",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "^5.0.1"
  },
  "scripts": {
    "build:css": "postcss src/styles/app.css -o public/index.css",
    "watch:css": "postcss src/styles/app.css -o public/index.css -w",
    "start": "npm-run-all -p watch:css start-js",
    "start-js": "react-scripts start",
    "build-js": "react-scripts build",
    "build": "npm-run-all build:css build-js",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "lint": "run-p lint:js lint:css",
    "lint:js": "eslint src",
    "lint:css": "stylelint src/**/*.css",
    "format": "run-p format:js format:css",
    "format:js": "eslint --fix ./src",
    "format:css": "stylefmt -c .stylefmtrc -r src/**/*.css"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^9.7.2",
    "cssnano": "^4.1.10",
    "eslint": "^6.7.1",
    "eslint-plugin-react": "^7.16.0",
    "npm-run-all": "^4.1.5",
    "postcss-apply": "^0.12.0",
    "postcss-cli": "^6.1.3",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-import": "^12.0.1",
    "postcss-mixins": "^6.2.3",
    "postcss-nested": "^4.2.1",
    "postcss-simple-vars": "^5.0.2",
    "postcss-sorting": "^5.0.1",
    "stylefmt": "^6.0.3",
    "stylelint": "^12.0.0",
    "stylelint-suitcss": "^3.0.0"
  }
}
